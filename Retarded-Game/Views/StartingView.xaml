<UserControl x:Class="Retarded_Game.Views.StartingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Retarded_Game.Views"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Content="Create Character" 
                    Grid.Row="0" 
                    Command="{Binding CreateCharacterCommand}"/>
        
        <Button Content="Load Character" 
                    Grid.Row="1" />
        
        <Button Content="Exit" 
                    Grid.Row="2" 
                    Command="{Binding CloseCommand}"/>
    </Grid>
</UserControl>
