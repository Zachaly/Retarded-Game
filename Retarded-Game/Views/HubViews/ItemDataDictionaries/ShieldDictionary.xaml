<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="BlockChance">
        <Label Content="{Binding BlockChance}"/>
    </DataTemplate>

    <DataTemplate x:Key="BlockBaseDamage">
        <Label Content="{Binding BlockBaseDamage}"/>
    </DataTemplate>

    <DataTemplate x:Key="BlockFireDamage">
        <Label Content="{Binding BlockFireDamage}"/>
    </DataTemplate>

    <DataTemplate x:Key="BlockMagicDamage">
        <Label Content="{Binding BlockMagicDamage}"/>
    </DataTemplate>

    <DataTemplate x:Key="BlockFrostDamage">
        <Label Content="{Binding BlockFrostDamage}"/>
    </DataTemplate>

    <DataTemplate x:Key="BlockLightningDamage">
        <Label Content="{Binding BlockLightningDamage}"/>
    </DataTemplate>
</ResourceDictionary>